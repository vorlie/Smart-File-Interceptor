{
  "manifest_version": 2,
  "name": "Smart File Interceptor",
  "version": "1.0",
  "author": "vorlie",
  "description": "Automatically intercept and download specific file types (e.g., images) to designated folders. Option to enable or disable mass downloads.",
  "permissions": [
    "downloads",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Smart File Interceptor"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}